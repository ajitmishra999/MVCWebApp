@model List<Product>;

@section title{
<h1>Products</h1>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                 <th>Category Name</th>
                <th>Product Name</th>
                 <th>Price</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.category?.Name</td>
                    <td>@product.Name</td>
                    <td>@product.Price?.ToString("c")</td>
                     <td>@product.Quantity</td>
                    <td><a class="btn btn-link" asp-controller="Categories" asp-action="edit" asp-route-id="@product.CategoryId">Edit</a></td>
                    <td><a class="btn btn-link" asp-controller="Categories" asp-action="delete" asp-route-categoryid="@product.CategoryId" onclick="return confirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a class="btn btn-primary" asp-controller="Products" asp-action="add">Add</a>
}
