@model ProductViewModel;

@section title {
<h1> Add Products</h1>
}

<form method="post" asp-controller="Products" asp-action="Add">
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="product.CategoryId" class="col-form-label-sm"></label>
        </div>
        <div class="col-6">
            <select asp-for="product.CategoryId" class="form-control">
                <option>- Please Select -</option>
                @if (Model.categories != null && Model.categories.Count() > 0)
                {
                    @foreach (var cat in Model.categories)
                    {
                        <option value="@cat.CategoryId">@cat.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="product.CategoryId"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="product.Name" class="col-form-label-sm"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="product.Name" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="product.Name"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="product.Price" class="col-form-label-sm"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="product.Price" min="0" step="any" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="product.Price"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="product.Quantity" class="col-form-label-sm"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="product.Quantity" min="1" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="product.Quantity"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
        <div class="col-6">
        </div>
    </div>
</form>